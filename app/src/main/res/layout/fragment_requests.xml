<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/pngBackground">

    <!-- Заголовок -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/light_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@color/dark_gray"
            android:text="Заказы"
            android:textAlignment="center"
            android:textColor="@color/text_or_button"
            android:textSize="28sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <!-- Список заказов -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRecycler"
        android:layout_width="0dp"
        android:layout_height="470dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/titleCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allRequestsRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            tools:itemCount="4"
            tools:listitem="@layout/item_request" />

    </androidx.cardview.widget.CardView>

    <!-- Поиск по клиентской базе -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardClientSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/customBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/tvSearchClientsRequests"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Поиск по клиентской базе"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <!-- Кнопка добавления заказа -->

    <!-- Нижняя панель -->
    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_button"
        android:elevation="6dp"
        android:scaleType="center"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toTopOf="@+id/cardClientSearch"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/customBottomBar"
        layout="@layout/bottom_nav_bar1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/etSearchRequests"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="6dp"
        android:hint="Поиск по заказам"
        android:padding="12dp"
        android:textColor="@color/text_or_button"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/cardClientSearch"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardClientSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>
